# ============================
#       User settings
# ============================

[hyclops]
# listen_address = *          # listen on all network interface
# listen_address = 127.0.0.1  # listen on specific network interface
listen_address = <%= node.hyclops.server %>
listen_port = <%= node.hyclops.port %>

[zabbix]
zabbix_server = <%= node.zabbix.server %>
zabbix_port = <%= node.zabbix.port %>
frontend_url = <%= node.zabbix.frontend_url %>
zabbix_user = <%= node.zabbix.login_username %>
zabbix_password = <%= node.zabbix.login_password %>
zabbix_sender = <%= node.zabbix.sender_path %>

[ipmi]
ipmitool = <%= `which ipmitool`.chomp %>

[logging]
log_level = <%= node.hyclops.log_level %>
log_file = <%= node.hyclops.log_file %>

